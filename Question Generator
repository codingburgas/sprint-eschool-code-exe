#include <cstdlib>
#include <ctime>
#include <iostream>
#include <limits>

using namespace std;

void question1(string answer) {
  cout << "Who is a famous author" << endl;
  cout << "====================================" << endl;
  cout << "Pick a choice" << endl;
  cout << "A) Vladimir" << endl; // THIS IS AN EXAMPLE WORK OF THIS QUESTION AND
                                 // MAKE THE REST LIKE THIS TOO!!!!!!!!!!
  cout << "B) I dont know me stupid" << endl;
  cout << "C) other option or something dont ask me" << endl;
  cout << "D) Fish" << endl;
  getline(cin, answer);
  if (answer == "A" || "a") {
    cout << "Correct :)";
  } else {
    cout << "Incorrect :(";
  }
}

int main() {
  srand(time(0));
  int n = rand() % 20; // from 0 to 20 right now change the last number to
                       // change up to which number it randomly generates
  cout << "Randomly picked question Good luck :) " << endl;
  cout << "Question ID = " << n << endl;
  cout << "====================================" << endl;
  string answer;

  if (n == 1) {
    question1(answer);
  }
}
